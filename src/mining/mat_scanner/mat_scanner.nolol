define ore_string=" Ore"
define crystal_string=" Crystal"
define nl="\n"

if :Scan==1 then
    :S=1
    :LastScan=""
    :I=0
    while :R==0 do
        :S=1
        :LastScan="Scanning"
    end
    while :I<=:R do
        :LastScan+="."
        :I++
    end
    :LastScan=""
    :I=:R
    :LastScan+=:M-ore_string-crystal_string+nl+:V+" kv"+nl+:V/1728+" stks"
    :Scan=0
    :Reset=1
end